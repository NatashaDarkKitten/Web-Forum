@using Web_Forum.Models
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>
<form method="post">
    <p><label for="email">Email</label></p>
    <p><input type="text" name="email" id="email" /></p>

    <p><label for="login">Login</label></p>
    <p><input type="text" name="login" id="login" /><a>Help to generate</a></p>

    <p><label for="name">Name</label></p>
    <p><input type="text" name="name" id="name" /></p>

    <p><label for="surname">Surname</label></p>
    <p><input type="text" name="surname" id="surname" /></p>

    <p><label for="password">Password</label></p>
    <p><input type="password" name="password" id="password" /></p>

    <p><label for="repassword">Repeat password</label></p>
    <p><input type="password" name="repassword" id="repassword" /></p>

    <p><input type="submit" value="Sign up"></p>
</form>
<p>Already registered? <a href="">Log in</a></p>

<p>Have no account yet? Sign up</p>

